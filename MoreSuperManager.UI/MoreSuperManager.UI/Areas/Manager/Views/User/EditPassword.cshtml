@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage.cshtml";
}

<div class="operater">
    <form action="@Url.Action("EditPasswordOperater")" class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="col-xs-2 control-label form-label">原&nbsp;密&nbsp;码：</label>
            <div class="col-xs-10 form-cell">
                <input class="form-control" style="width:200px;" type="text" name="oldPassword"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label form-label">新&nbsp;密&nbsp;码：</label>
            <div class="col-xs-10 form-cell">
                <input class="form-control" style="width:200px;" type="text" name="newPassword" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label form-label">密码确认：</label>
            <div class="col-xs-10 form-cell">
                <input class="form-control" style="width:200px;" type="text" name="againPassword" />
            </div>
        </div>
        <div class="form-group">
            <span style="padding-left:100px;">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-saved" style="font-size:12px;padding-right : 10px;"></i>保存</button>
            </span>
        </div>
    </form>
</div>


