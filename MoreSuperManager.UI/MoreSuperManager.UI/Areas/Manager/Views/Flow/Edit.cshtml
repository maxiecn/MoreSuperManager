@using MoreSuperManager.MODEL
@model DBFlowModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage.cshtml";
}


<div class="operater">
    <form action="@Url.Action("EditOperater", new { identityID = (Model != null ? Model.IdentityID : 0) })" class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="col-xs-2 control-label form-label">流程名称：</label>
            <div class="col-xs-10 form-cell">
                <input class="form-control" style="width:200px;" type="text" name="flowName" value="@Html.Raw(Server.HtmlEncode(Model != null ? Model.FlowName : ""))" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label form-label">流程类别：</label>
            <div class="col-xs-10 form-cell">
                <select class="form-control" style="width:200px;" name="flowType">
                    @if(ViewBag.FlowTypeList != null && ViewBag.FlowTypeList.Count > 0)
                    {
                        foreach (MoreSuperManager.MODEL.DBFlowTypeModel modelItem in ViewBag.FlowTypeList)
                        {
                            <option value="@modelItem.IdentityID" @(Html.Raw(Model != null && Model.FlowType == modelItem.IdentityID ? "selected=\"selected\"" : ""))>@Html.Raw(Server.HtmlEncode(modelItem.TypeName))</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <span style="padding-left:100px;">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-saved" style="font-size:12px;padding-right : 10px;"></i>保存</button>
                <a class="btn btn-warning" style="margin-left:10px;" href="@Url.Action("List")"><i class="glyphicon glyphicon-share-alt" style="padding-right:10px;"></i>返回管理页面</a>
            </span>
        </div>
    </form>
</div>

