<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理后台登录 - @SettingHelper.ManagerTitle</title>
    <meta name="robots" content="noindex,follow" />
    <link rel="stylesheet" href="~/Content/3.3.7/css/bootstrap.min.css?v=@SettingHelper.Version" />
    <link rel="stylesheet" href="~/Content/login.css?v=@SettingHelper.Version" />
</head>
<body>
    <div class="container login-container forbidden-text-select">
        <div class="login-row">
            <div class="login-col col-xs-12 col-sm-6 col-md-5 col-lg-4">
                <div class="panel panel-default login-panel">
                    <div class="login-title">登录管理后台</div>
                    <div class="panel-body">
                        <form action="@Url.Action("Login", "Login")" method="post">
                            @Html.AntiForgeryToken()
                            <div class="input-group col-xs-12" style="border:0px;position:relative;padding:0px;">
                                <input type="text" id="userCode" name="userCode" class="form-control col-xs-12 login-user" value="@ViewBag.UserCode" placeholder="用户名" />
                            </div>
                            <div class="input-group col-xs-12" style="margin-top : 15px;border:0px;">
                                <input type="password" id="userPassword" name="userPassword" class="form-control col-xs-12 login-password" placeholder="密码" />
                            </div>
                            <div class="input-group col-xs-12 forget-password">
                                <div class="checkbox-inline pull-left">
                                    <label style="font-weight:normal;"><input type="checkbox" name="memberUserCode" @Html.Raw(!string.IsNullOrEmpty(ViewBag.UserCode) ? "checked=\"checked\"" : "") /><span>记住用户名</span></label>
                                </div>
                                <div class="pull-right">
                                    <a href="#">忘记密码了？</a>
                                </div>
                            </div>
                            <div class="col-xs-12 input-group">
                                <button type="submit" class="btn btn-primary col-xs-12"><i class="glyphicon glyphicon-off" style="font-size:12px;padding-right : 10px;"></i>登录</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
